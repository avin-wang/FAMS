<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Style of general TextBlock-->
    <Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">
        <!--Font-->
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSizeNormal}" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <!--Alignment-->
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>

    <!--TextBlock style with font icon-->
    <Style x:Key="TextBlockStyleWithFontIcon" TargetType="TextBlock">
        <!--Font-->
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="/Resources/FontFamilies/#SF2015" />
        <Setter Property="Foreground" Value="{StaticResource TextForeground}" />
        <!--Alignment-->
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>