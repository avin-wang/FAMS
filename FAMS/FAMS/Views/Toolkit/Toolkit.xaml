<Page x:Class="FAMS.Views.Toolkit.Toolkit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FAMS.Views.Toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="Toolkit">

    <Grid Margin="10,30,10,0">
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Border>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource ButtonStyleForLoanCalc}" x:Name="btnLoanCalc" Click="btnLoanCalc_Click" />
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
